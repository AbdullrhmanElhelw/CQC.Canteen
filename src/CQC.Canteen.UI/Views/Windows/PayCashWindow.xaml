<Window x:Class="CQC.Canteen.UI.Views.Windows.PayCashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تأكيد الدفع النقدي"
        Width="420" 
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FlowDirection="RightToLeft"
        Loaded="Window_Loaded">

    <Border CornerRadius="10" Background="White" BorderBrush="#DDD" 
            BorderThickness="1" Padding="30" Margin="15">

        <Grid>
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="المبلغ الإجمالي" 
                           FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TotalAmountText" 
                           Text="0.00 ج.م" 
                           FontSize="36" FontWeight="Bold" Foreground="#B22222" 
                           HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <TextBlock Text="المبلغ المستلم" 
                           FontSize="16" Margin="0,10,0,5"/>
                <TextBox x:Name="AmountReceivedBox" 
                         Height="40" 
                         FontSize="18" FontWeight="Bold"
                         VerticalContentAlignment="Center" Padding="10,0"
                         TextChanged="AmountReceivedBox_TextChanged"
                         Text="0"/>

                <TextBlock Text="الباقي" 
                           FontSize="16" Foreground="Gray"
                           Margin="0,15,0,5" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ChangeText" 
                           Text="0.00 ج.م" 
                           FontSize="28" FontWeight="Bold" Foreground="#006400" 
                           HorizontalAlignment="Center"/>

                <CheckBox x:Name="PrintReceiptCheckBox" 
                          Content="🖨️ طباعة إيصال"
                          IsChecked="True"
                          HorizontalAlignment="Center"
                          FontSize="14"
                          Margin="0,25,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button x:Name="ConfirmButton" 
                            Content="✔️ تأكيد"
                            Width="120" 
                            Height="40"
                            Margin="5"
                            Click="Confirm_Click"
                            Background="#B22222" Foreground="White" 
                            FontWeight="Bold" BorderThickness="0"
                            IsEnabled="False"/>
                    <Button Content="✖️ إلغاء"
                            Width="120" 
                            Height="40"
                            Margin="5"
                            Click="Cancel_Click"
                            Background="Transparent" BorderBrush="#B22222" 
                            BorderThickness="2" Foreground="#B22222"
                            FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>