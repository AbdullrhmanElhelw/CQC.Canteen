<UserControl x:Class="CQC.Canteen.UI.Views.CasherSalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Background="#F9FAFB"
             d:DesignHeight="700" d:DesignWidth="1100"
             FlowDirection="RightToLeft">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- 🛒 سلة المشتريات -->
        <Border CornerRadius="10" Background="White" Padding="15" Margin="5" BorderBrush="#EEE" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="🛍️ سلة المشتريات"
                           FontSize="20" FontWeight="Bold" Foreground="#B22222" Margin="0,0,0,15"/>

                <DataGrid ItemsSource="{Binding CartItems}" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الصنف" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="70"/>
                        <DataGridTextColumn Header="السعر" Binding="{Binding Price}" Width="90" />
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding Total}" Width="90"/>
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 💰 الإجمالي -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
                    <TextBlock Text="الإجمالي:" FontWeight="Bold" FontSize="16" Margin="5,0"/>
                    <TextBlock x:Name="TotalText"
                               Text="{Binding TotalAmount}" 
                               FontSize="16" 
                               Foreground="#B22222"
                               FontWeight="Bold"/>
                    <TextBlock Text=" ج.م" FontSize="14" Margin="2,0,0,0"/>
                </StackPanel>

                <!-- أزرار الدفع -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="💵 دفع نقدي" Command="{Binding PayCashCommand}"
                            Background="#B22222" Foreground="White" FontSize="16" Width="150" Margin="0,0,10,0"
                            Cursor="Hand" BorderThickness="0" Padding="10,5" />
                    <Button Content="🧾 دفع آجل" Command="{Binding PayDeferredCommand}"
                            Background="#D4AF37" Foreground="Black" FontSize="16" Width="150"
                            Cursor="Hand" BorderThickness="0" Padding="10,5" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 🧃 المنتجات المتاحة -->
        <Border Grid.Column="1" CornerRadius="10" Background="White" Padding="15" Margin="5" BorderBrush="#EEE" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="🧺 المنتجات المتاحة" FontSize="20" FontWeight="Bold" Foreground="#B22222" Margin="0,0,0,15"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="150" Height="130" Margin="10" Padding="10"
                                        Background="#F9F9F9" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1"
                                        MouseLeftButtonUp="Product_Click">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SalePrice, StringFormat={}{0} جنيه}" Foreground="#B22222" FontSize="14" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding CategoryName}" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                                        <Button Content="➕ إضافة" 
                                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="100" Height="30" Background="#B22222" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
