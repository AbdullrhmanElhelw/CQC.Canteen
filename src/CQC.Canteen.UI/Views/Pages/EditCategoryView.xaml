<Window x:Class="CQC.Canteen.UI.Views.Pages.EditCategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="تعديل الفئة"
        Height="350" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F4F4"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- الألوان -->
        <Color x:Key="EgyptianRedColor">#B22222</Color>
        <Color x:Key="EgyptianBlueColor">#003366</Color>
        <SolidColorBrush x:Key="EgyptianRedBrush" Color="{StaticResource EgyptianRedColor}"/>
        <SolidColorBrush x:Key="EgyptianBlueBrush" Color="{StaticResource EgyptianBlueColor}"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- زر رئيسي -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="{StaticResource EgyptianRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9A1B1B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- زر ثانوي -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="8" Margin="20" Padding="30">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Opacity="0.25"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- العنوان -->
                    <RowDefinition Height="*"/>
                    <!-- الحقول -->
                    <RowDefinition Height="Auto"/>
                    <!-- الأزرار -->
                </Grid.RowDefinitions>

                <!-- العنوان -->
                <TextBlock Grid.Row="0"
                           Text="✏️ تعديل الفئة"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource EgyptianBlueBrush}"
                           Margin="0,0,0,24"/>

                <!-- الحقول -->
                <StackPanel Grid.Row="1">
                    <!-- رقم الفئة -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="رقم الفئة:"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#666"
                                   Width="80"/>
                        <TextBlock Text="{Binding Id}"
                                   FontSize="13"
                                   Foreground="{StaticResource EgyptianBlueBrush}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- اسم الفئة -->
                    <TextBlock Text="اسم الفئة *"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Padding="10"
                             Height="40"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             Margin="0,0,0,24"/>
                </StackPanel>

                <!-- الأزرار -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button Content="💾 حفظ التعديلات"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="160"
                            Margin="0,0,12,0"/>

                    <Button Content="✖️ إلغاء"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- مؤشر التحميل -->
        <Border Background="#CCFFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border Background="White"
                    Padding="30"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,16"/>
                    <TextBlock Text="جاري التحميل..."
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource EgyptianBlueBrush}"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- مؤشر الحفظ -->
        <Border Background="#CCFFFFFF"
                Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border Background="White"
                    Padding="30"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,16"/>
                    <TextBlock Text="جاري الحفظ..."
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource EgyptianBlueBrush}"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
