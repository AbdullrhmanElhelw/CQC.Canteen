<UserControl x:Class="CQC.Canteen.UI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CQC.Canteen.UI.Views"
             xmlns:viewmodels="clr-namespace:CQC.Canteen.UI.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
             d:DesignHeight="700" d:DesignWidth="1000"
             FontFamily="Tahoma">

    <!-- الخلفية الرئيسية (صورة المبنى) -->
    <Grid>
        <Image Source="/Assets/image162 (1).jpg" Stretch="UniformToFill" />

        <!-- فلتر غامق شوية عشان الكلام يظهر -->
        <Border Background="#44000000" />

        <!-- كارت اللوجن في النص -->
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="380"
                Background="#FFFFFF" 
                CornerRadius="15"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="20" Color="#000000" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel Margin="30">

                <!-- (التعديل هنا: غيرنا jpg لـ png) -->
                <Image Source="/Assets/Logo (1) (1).png" 
                       Width="150" 
                       Height="150"
                       Margin="0,0,0,20" />

                <TextBlock Text="نظام إدارة الكانتين" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#333" 
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- فورم اللوجن -->
                <StackPanel>
                    <TextBlock Text="اسم المستخدم" 
                               Foreground="#555" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>

                    <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="UsernameTextBox" 
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10"
                                 FontSize="16"
                                 BorderThickness="0"/>
                    </Border>

                    <TextBlock Text="كلمة المرور" 
                               Foreground="#555" 
                               FontSize="14" 
                               Margin="0,15,0,5"/>

                    <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5">
                        <PasswordBox x:Name="PasswordBox" 
                                     Padding="10"
                                     FontSize="16"
                                     BorderThickness="0"/>
                    </Border>

                    <!-- رسالة الخطأ -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="13"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- زرار اللوجن -->
                    <Border CornerRadius="5" Margin="0,20,0,0" Background="#B22222">
                        <Button x:Name="LoginButton"
                                Command="{Binding LoginCommand}"
                                CommandParameter="{Binding ElementName=PasswordBox}"
                                Content="تسجيل الدخول" 
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="White"
                                Background="Transparent" 
                                Padding="12"
                                Cursor="Hand"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="IsEnabled" Value="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#AAA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>

                    <!-- مؤشر التحميل -->
                    <TextBlock Text="...جاري التحميل"
                               TextAlignment="Center"
                               Foreground="#555"
                               Margin="0,10,0,0"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

