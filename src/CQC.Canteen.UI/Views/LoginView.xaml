<UserControl x:Class="CQC.Canteen.UI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CQC.Canteen.UI.Views"
             xmlns:viewmodels="clr-namespace:CQC.Canteen.UI.ViewModels"
             xmlns:converters="clr-namespace:CQC.Canteen.UI.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
             d:DesignHeight="700" d:DesignWidth="1000"
             FontFamily="Tahoma">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- الألوان المصرية -->
        <Color x:Key="EgyptianRedColor">#B22222</Color>
        <Color x:Key="EgyptianGoldColor">#D4AF37</Color>
        <Color x:Key="EgyptianBlueColor">#003366</Color>

        <SolidColorBrush x:Key="EgyptianRedBrush" Color="{StaticResource EgyptianRedColor}"/>
        <SolidColorBrush x:Key="EgyptianGoldBrush" Color="{StaticResource EgyptianGoldColor}"/>
        <SolidColorBrush x:Key="EgyptianBlueBrush" Color="{StaticResource EgyptianBlueColor}"/>
    </UserControl.Resources>

    <!-- الخلفية الرئيسية (صورة المبنى) -->
    <Grid>
        <Image Source="/Assets/image162 (1).jpg" Stretch="UniformToFill" />

        <!-- فلتر غامق شوية عشان الكلام يظهر -->
        <Border Background="#66000000" />

        <!-- كارت اللوجن في النص -->
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="400"
                Background="White" 
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="25" Color="#000000" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="35" Orientation="Vertical">

                <!-- الشعار والعنوان -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                    <Image Source="/Assets/Logo (1) (1).png" 
                           Width="120" 
                           Height="120"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                    <TextBlock Text="نظام إدارة الكانتين" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource EgyptianBlueBrush}" 
                               TextAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="مركز تأهيل الحاسبات - CQC"
                               FontSize="14"
                               Foreground="#666"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- فورم اللوجن -->
                <StackPanel>
                    <!-- اسم المستخدم -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="اسم المستخدم" 
                                   Foreground="{StaticResource EgyptianBlueBrush}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="#F9F9F9">
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,10"
                                     FontSize="14"
                                     BorderThickness="0"
                                     Background="Transparent"/>
                        </Border>
                    </StackPanel>

                    <!-- كلمة المرور -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="كلمة المرور" 
                                   Foreground="{StaticResource EgyptianBlueBrush}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>

                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="#F9F9F9">
                            <PasswordBox x:Name="PasswordBox" 
                                         Padding="12,10"
                                         FontSize="14"
                                         BorderThickness="0"
                                         Background="Transparent"/>
                        </Border>
                    </StackPanel>

                    <!-- رسالة الخطأ -->
                    <Border Background="#FFF5F5" 
                            BorderBrush="#FFEBEE" 
                            BorderThickness="1" 
                            CornerRadius="6"
                            Padding="12,10"
                            Margin="0,0,0,15"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#D32F2F"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"/>
                    </Border>

                    <!-- زرار اللوجن -->
                    <Button Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=PasswordBox}"
                            Content="تسجيل الدخول" 
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="{StaticResource EgyptianRedBrush}"
                            Padding="16,12"
                            Cursor="Hand"
                            BorderThickness="0"
                            Height="48">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#9A1B1B"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#7A1515"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- مؤشر التحميل -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,12,0,0"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="20" 
                                     Height="20" 
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="جاري التحقق..."
                                   Foreground="#666"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- حقوق النشر -->
                <TextBlock Text="© 2024 مركز تأهيل الحاسبات. جميع الحقوق محفوظة."
                           FontSize="11"
                           Foreground="#999"
                           TextAlignment="Center"
                           Margin="0,25,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>