<Window x:Class="CQC.Canteen.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CQC.Canteen.UI"
        mc:Ignorable="d"
        Title="CQC Canteen System - مركز تأهيل الحاسبات" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="1000"
        Icon="/Assets/Logo (1) (1).png"
        FontFamily="Tahoma">

    <Window.Resources>
        <Color x:Key="EgyptianRedColor">#B22222</Color>
        <Color x:Key="EgyptianGoldColor">#D4AF37</Color>
        <Color x:Key="EgyptianBlueColor">#003366</Color>

        <SolidColorBrush x:Key="EgyptianRedBrush" Color="{StaticResource EgyptianRedColor}"/>
        <SolidColorBrush x:Key="EgyptianGoldBrush" Color="{StaticResource EgyptianGoldColor}"/>
        <SolidColorBrush x:Key="EgyptianBlueBrush" Color="{StaticResource EgyptianBlueColor}"/>

        <Style TargetType="Button" x:Key="LogoutButton">
            <Setter Property="Background" Value="{StaticResource EgyptianRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C73E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource EgyptianBlueBrush}" MinHeight="50">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" Color="Black" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}" 
                           Width="32" Height="32" Margin="5"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="🚪 تسجيل خروج"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource LogoutButton}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />

    </Grid>

</Window>